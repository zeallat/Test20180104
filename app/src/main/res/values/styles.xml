<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background.default</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text.primary</item>
        <item name="android:textColorHint">@color/text.secondary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Large" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Small" parent="Text">
        <item name="android:textSize">11sp</item>
    </style>

</resources>
